<resources>

    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Optional: set to transparent if your app is drawing behind the status bar. -->
        <!-- Optional: set for a light status bar with dark content. -->
        <item name="android:windowLightStatusBar">
            true
        </item>
    </style>

    <style name="MaterialAlertDialog.Material3.Light" parent="MaterialAlertDialog.Material3">
        <item name="android:background">@color/white</item>
        <item name="android:textColorPrimary">@color/trueblack</item>
        <item name="android:textColorSecondary">@color/trueblack</item>
        <item name="android:colorAccent">@color/purple</item>
    </style>

    <!-- Modo claro -->
    <!-- Fondo de la app en modo claro -->
    <style name="BACKGROUND">
        <item name="android:colorBackground">@color/white</item>
    </style>

    <!-- Fondo de la titlebar superior en modo claro -->
    <style name="TITLEBAR">
        <item name="android:background">@color/light_grey_3</item>
    </style>

    <!-- Textos en modo claro -->
    <style name="TEXTS">
        <item name="android:textColor">@color/trueblack</item>
    </style>

    <!-- Subtextos en modo claro -->
    <style name="SUBTEXTS">
        <item name="android:textColor">@color/smoke</item>
    </style>

    <!-- Texto de titulo de la app -->
    <style name="APP_TITLE">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/gabarito_medium</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="ACTIVE_NAVBAR_ITEM" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/accent_darker</item>
    </style>

    <!-- Islas de opciones en modo claro -->
    <style name="ISLANDS">
        <item name="android:background">@drawable/settings_option_bg</item>
    </style>

    <!-- Islas de opciones en modo claro (sin ripple) -->
    <style name="NO_RIPPLE_ISLANDS">
        <item name="android:background">@drawable/settings_option_bg_no_ripple</item>
    </style>

    <style name="STROKE">
        <item name="android:foreground">@drawable/inverted_corners</item>
    </style>

    <!-- Botones y normales en modo claro -->
    <style name="BUTTONS">
        <item name="android:background">@color/smoke</item>
        <item name="android:textColor">@color/trueblack</item>
    </style>

    <!-- Boton de traducir en modo claro -->
    <style name="TRANSLATE_BUTTON" parent="@style/Widget.Material3.Button.ElevatedButton">
        <item name="android:background">@drawable/ripple_translate_bt</item>
        <item name="android:textColor">@color/purple_text_input</item>
    </style>

    <!-- Cuadros de input de texto en modo claro -->
    <style name="TRANSLATOR_TEXT_BOXES">
        <item name="android:background">@drawable/edittext_design</item>
        <item name="android:textColor">@color/purple_text_input</item>
    </style>

    <!-- Cuadros de input de texto en modo claro -->
    <style name="TRANSLATOR_INPUT_LANG_BUTTON">
        <item name="android:background">@drawable/input_lang_button_light</item>
        <item name="android:textColor">@color/purple_text_input</item>
        <item name="android:popupBackground">@drawable/spinner_light_bg</item>
    </style>

    <style name="TRANSLATOR_OUTPUT_LANG_BUTTON">
        <item name="android:background">@drawable/output_lang_button_light</item>
        <item name="android:textColor">@color/purple_text_input</item>
        <item name="android:popupBackground">@drawable/spinner_light_bg</item>
    </style>

    <!-- Icon Button Copiar en modo claro -->
    <style name="COPY_ICON_BUTTON">
        <item name="android:background">@drawable/ripple_bt</item>
        <item name="srcCompat">@drawable/baseline_content_copy_24</item>
    </style>

    <!-- Icon Button Borrar en modo claro -->
    <style name="DELETE_ICON_BUTTON">
        <item name="android:background">@drawable/ripple_bt</item>
        <item name="srcCompat">@drawable/baseline_delete_outline_24</item>
    </style>

    <style name="FLOATING_DN_BUTTON">
        <item name="android:backgroundTint">#f2d6f4</item>
    </style>

    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication" />
</resources>